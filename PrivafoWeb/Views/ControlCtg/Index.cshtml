@model ControlCtg

@{ ViewData["Title"] = "Index"; }

@section rtpage
{
    <div class="ms-auto">
	    <a class="btn btn-primary radius-30 mt-2 mt-lg-0" onclick="showInPopup('@Url.Action("Upsert","ControlCtg",null,Context.Request.Scheme)','Create New Control Category')"><i class="bx bxs-plus-square"></i>Add Control Category</a>
    </div>
}

<div id="view-all">
    @await Html.PartialAsync("_ViewAll", new ControlCtg())
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/theme/plugins/toastr/js/toastr.min.js"></script>
    <script src="~/js/datagrid/controlctg.js"> </script>    
	<script src="~/theme/plugins/adv-structured-filter/js/structured-filter.min.js"></script>
}
