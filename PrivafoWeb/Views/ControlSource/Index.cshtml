@model ControlSource

@{ ViewData["Title"] = "Index"; }

@section rtpage
{
    <div class="ms-auto">
	    <a class="btn btn-primary radius-30 mt-2 mt-lg-0" onclick="showInPopup('@Url.Action("Upsert","ControlSource",null,Context.Request.Scheme)','Create New Control Source')"><i class="bx bxs-plus-square"></i>Add Control Source</a>
    </div>
}

<div id="view-all">
    @await Html.PartialAsync("_ViewAll", new ControlSource())
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/theme/plugins/toastr/js/toastr.min.js"></script>
    <script src="~/js/datagrid/controlsource.js"> </script>    
	<script src="~/theme/plugins/adv-structured-filter/js/structured-filter.min.js"></script>
}
