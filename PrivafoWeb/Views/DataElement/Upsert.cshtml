@model Privafo.Models.ViewModels.DataElementVM
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="Upsert" asp-route-id="@Model.dataElement.ID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="dataElement.ID" />
             <input asp-for="dataElement.CreatedBy" value="@UserManager.GetUserId(User)" hidden />
            <input asp-for="dataElement.ModifiedBy" value="@UserManager.GetUserId(User)" hidden />
            <div class="row mb-5">
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label asp-for="dataElement.DataElementName" class="control-label"></label>
                        <input asp-for="dataElement.DataElementName" class="form-control" />
                        <span asp-validation-for="dataElement.DataElementName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="dataElement.DteCtgID"></label>
			                <select asp-for="dataElement.DteCtgID" asp-items="@Model.categorylist" class="form-select">
				                <option disabled selected>--Select Category--</option>
			                </select>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="dataElement.Description" class="control-label"></label>
                        <textarea asp-for="dataElement.Description" class="form-control" rows=3></textarea>
                        <span asp-validation-for="dataElement.Description" class="text-danger"></span>
                    </div>

                </div>
            </div>               
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-12" style="text-align:right">
                            <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>