@model IEnumerable<Module>
@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_LayoutWelcome.cshtml";
}
<div class="container">
    <div class="wrapper">

        @*<div class="header">
            <h1 class="header__title">Expanding module Grid</h1>
            <h2 class="header__subtitle">with Flexbox</h2>
        </div>*@

        <div class="modules">
            @foreach(var obj in Model)
            {                
                <div class=" module [ is-collapsed ] ">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <div class="module__inner">
                            <div class="module__title">@obj.ModuleName</div>
                            <span class="[ js-expander ]"><i class="fa fa-search-plus"></i></span>
                        </div>
                    </a>
                    <div class="module__expander">
                        <i class="fa fa-close [ js-collapser ]"></i>
                        <div>@obj.Description</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

