@{
    ViewData["Title"] = "Index";
}

<div>
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Module List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Module" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Module
            </a>
        </div>
    </div>

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Module Name</th>
                <th>Description</th>
                <th>Module Sort</th>
                <th>Module Image Class</th>
                <th>Module Category</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/datagrid/module.js"> </script>
}

