@model RiskThreat
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="Upsert" asp-route-id="@Model.ID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input asp-for="CreatedBy" value="@UserManager.GetUserId(User)" hidden />
            <input asp-for="ModifiedBy" value="@UserManager.GetUserId(User)" hidden />
            <div class="row mb-5">
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label asp-for="ThreatName" class="control-label"></label>
                        <input asp-for="ThreatName" class="form-control" />
                        <span asp-validation-for="ThreatName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows=3></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>               
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-12" style="text-align:right">
                            <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>