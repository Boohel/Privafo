
@if(TempData["success"] != null)
{
	<script src="~/theme/js/jquery.min.js"></script>
	<script src="~/theme/plugins/toastr/js/toastr.min.js"></script>
    <script type="text/javascript">        
        toastr.options = {
          "closeButton": true,
          "debug": false,
          "newestOnTop": true,
          "progressBar": true,
          "positionClass": "toast-top-right",
          "preventDuplicates": true,
          "onclick": null,
          "showDuration": "300",
          "hideDuration": "1000",
          "timeOut": "3000",
          "extendedTimeOut": "1000",
          "showEasing": "swing",
          "hideEasing": "linear",
          "showMethod": "fadeIn",
          "hideMethod": "fadeOut"
        }
        toastr.success('@TempData["success"]');
    </script>
}
